boolean existecamino(origen, destino){
    if (origen == destino)
        return true;
        else {
            para cada adyacente a origen !visitado {
                boolean r = existecamino(adyacente, destino);
                if (r) {
                    return true;
                }
                return false;
            }
        }
}

